<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="@mail.smtp.server@" />
		<property name="port" value="25" />
		<property name="username" value="username" />
		<property name="password" value="password" />
		
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls">true</prop>
			</props>
		</property>
	
	</bean>

	<bean id="mailMail" class="mx.com.telcel.di.sds.gsac.dsc.ws.main_application.wsm2k_monitor.business.utilities.MailManagerMonitor" >
		<property name="mailSender" ref="mailSender" />
	</bean>
        
        <bean id="coreMailManager" class="mx.com.telcel.di.sds.gsac.dsc.ws.main_application.core.util.MailManager" >
		<property name="mailSender" ref="mailSender" />
		<property name="mailFrom" value="@monitor.alert.mail@" />
		<property name="mailTo" value="@monitor.alert.destinatarios@" />
		<property name="telcelLogoUrl" value="@mail.telcel.logo.url@" />
		<property name="backgroundUrl" value="@mail.background.url@" />
		<property name="portalServiciosUrl" value="@mail.portal.servicios.url@" />
	</bean>
</beans>
